<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:id="@+id/video_card"
            android:focusable="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to make eaggle"
            android:id="@+id/vidName"
            android:textColor="#de000000"
            android:layout_below="@id/video_card"
            android:layout_marginTop="15dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:20:34"
            android:textColor="#de000000"
            android:layout_below="@id/video_card"
            android:layout_alignParentEnd="true"
            android:id="@+id/VidDuration"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fileUploader"
            android:text="By James Machariah muini"
            android:layout_below="@id/vidName"
            android:textColor="#de000000"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 years ago"
            android:id="@+id/uploadedAt"
            android:layout_below="@id/fileUploader"
            android:textColor="#de000000"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"/>
    </RelativeLayout>
</LinearLayout>