<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wh_bg"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6FCCCACA">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/collect_waste"/>

        <ScrollView
            android:id="@+id/scrollable"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/main_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="@string/register"
                    android:textColor="#056D1B"
                    android:textSize="32sp"
                    android:textStyle="normal" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/inp_bg"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/person_24" />

                        <EditText
                            android:id="@+id/firstname"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:autofillHints="name"
                            android:background="@drawable/inp_bg"
                            android:hint="First name"
                            android:inputType="textPersonName"
                            android:textColor="#000"
                            android:textColorHint="#8F263903" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/inp_bg"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/person_24" />

                        <EditText
                            android:id="@+id/lastname"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:autofillHints="name"
                            android:background="@drawable/inp_bg"
                            android:hint="Last Name"
                            android:inputType="textPersonName"
                            android:textColor="#000"
                            android:textColorHint="#8F263903" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/inp_bg"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/phone_24" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:autofillHints="phone"
                            android:background="@drawable/inp_bg"
                            android:hint="Your phone"
                            android:inputType="phone"
                            android:textColor="#000"
                            android:textColorHint="#8F263903" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/inp_bg"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/reg_24" />

                        <EditText
                            android:id="@+id/bio"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:autofillHints="text"
                            android:background="@drawable/inp_bg"
                            android:hint="About you (Bio)"
                            android:inputType="text"
                            android:textColorHint="#8F263903" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/inp_bg"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/person_24" />

                        <EditText
                            android:id="@+id/userName"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:autofillHints="username"
                            android:background="@drawable/inp_bg"
                            android:hint="User name (Public)"
                            android:inputType="textPersonName"
                            android:textColor="#000"
                            android:textColorHint="#8F263903" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/inp_bg"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/location_on_24" />

                        <EditText
                            android:id="@+id/country"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:autofillHints="postalAddress"
                            android:background="@drawable/inp_bg"
                            android:hint="Your country"
                            android:inputType="textEmailAddress"
                            android:textColor="#000"
                            android:textColorHint="#8F263903" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/inp_bg"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/lock_24" />

                        <EditText
                            android:id="@+id/setPassword"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:autofillHints="password"
                            android:background="@drawable/inp_bg"
                            android:hint="Set password"
                            android:inputType="textPassword" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/inp_bg"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/lock_24" />

                        <EditText
                            android:id="@+id/password"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:autofillHints="password"
                            android:background="@drawable/inp_bg"
                            android:hint="Confirm Password"
                            android:inputType="textPassword" />
                    </TableRow>
                </TableLayout>

                <Button
                    android:textColor="#fff"
                    android:id="@+id/SignupButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#337104"
                    android:text="@string/sign_up"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="40dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="#000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/or"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/loginText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="20dp"
                        android:text="@string/log_in"
                        android:textColor="#e3e"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="#000" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#36FFFFFF">

    </RelativeLayout>
</FrameLayout>