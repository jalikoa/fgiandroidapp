<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wh_bg"
    android:layout_width="match_parent">
        <View
            android:layout_width="match_parent"
            android:id="@+id/top_view"
            android:layout_height="200dp"
            android:background="@drawable/bg_view"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_marginTop="-80dp"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:rowCount="3"
            android:layout_below="@+id/top_view">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/usersCard"
                android:layout_rowWeight="1"
                app:cardElevation="15dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/people_alt_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total:237"
                        android:textSize="16sp"
                        android:textColor="#052208"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:id="@+id/resourceCard"
                android:layout_margin="12dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                app:cardElevation="15dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/local_library_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resources"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total:4678"
                        android:textSize="16sp"
                        android:textColor="#052208"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/settingsCard"
                android:layout_rowWeight="1"
                app:cardElevation="15dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/settings_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="settings"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                app:cardElevation="15dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/warehouse_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initiative assets"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total:17"
                        android:textSize="16sp"
                        android:textColor="#052208"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowWeight="1"
                app:cardElevation="15dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/add_circle_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add new"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                app:cardCornerRadius="15dp"
                android:id="@+id/logoutCard"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_margin="12dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                app:cardElevation="15dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logout_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="32sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Dashboard" />
</RelativeLayout>
