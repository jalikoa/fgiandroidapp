<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wh_bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/landing_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="80dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/holding_trees" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:background="@drawable/ellipse_bg"
        android:elevation="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="#C3000000"
            android:id="@+id/futureGuards"
            android:text="@string/future_guardians"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initiative"
            android:textColor="#C3000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="23sp"
            android:textStyle="bold|italic"
            android:layout_below="@id/futureGuards"
            android:id="@+id/futureIni"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/futureIni"
            android:layout_height="wrap_content"
            android:textColor="#de000000"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/overview"
            android:text="@string/overview_text"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/start_btn"
            android:background="#00FFFFFF"
            android:id="@+id/start_button"
            android:layout_below="@id/overview"
            android:padding="0dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>