<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wh_bg"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/header_title"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/header_bg">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/home_logo"
            android:src="@drawable/home_24"
            android:contentDescription="@string/app_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:text="@string/future_initiative"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_title"
        android:id="@+id/scrollable"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/body"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/searchTab"
                android:orientation="vertical"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/searchCont"
                    android:orientation="horizontal"
                    android:background="@drawable/inp_bg"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/inp_bg"
                    android:id="@+id/searchInput"
                    android:inputType="text"
                    android:autofillHints="name"
                    android:hint="@string/search_here"
                    android:textColorHint="#D0033A11"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    />
                    <ImageButton
                        android:layout_width="50dp"
                        android:background="@drawable/inp_bg"
                        android:layout_height="50dp"
                        android:src="@drawable/location_on_24"
                        android:id="@+id/searchButton"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/searchTab"
                android:background="#1D8E8E8E"
                android:id="@+id/body_head">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:contentDescription="@string/future_initiative"
                    android:id="@+id/activity_done"
                    android:scaleType="centerCrop"
                    android:src="@drawable/care_trees"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/by_michael_mboya"
                        android:id="@+id/posted_by"/>
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_5_years_ago"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/time_posted"
                        tools:ignore="RelativeOverlap" />
                    <TextView
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/posted_by"
                        android:text="@string/how_to_plant_a_tree"
                        android:id="@+id/post_title"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_below="@+id/body_head">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="#8BC34A"
                    android:text="@string/our_programs"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:backgroundTint="#00FFFFFF"
                    android:id="@+id/menu_holder">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="200dp"
                        android:id="@+id/education"
                        android:backgroundTint="#FFFFFF"
                        android:layout_margin="5dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/education_24"
                                android:id="@+id/education_logo"
                                android:contentDescription="@string/app_name" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="@string/education"
                                android:textColor="#8BC34A"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                            <TextView
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/education_logo"
                                android:layout_marginTop="10dp"
                                android:text="@string/education_text"/>

                            <Button
                                android:textColor="#fff"
                                android:id="@+id/joinEdu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:backgroundTint="#4FA40F"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="@string/join" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:id="@+id/community"
                        android:layout_weight="1"
                        android:backgroundTint="#ffffff"
                        android:layout_margin="5dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:backgroundTint="#00FFFFFF"
                            android:layout_height="match_parent"
                            android:padding="20dp">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/people_24"
                                android:id="@+id/community_logo"
                                android:contentDescription="@string/app_name" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#8BC34A"
                                android:textStyle="bold"
                                android:layout_alignParentEnd="true"
                                android:text="@string/community"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                            <TextView
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/community_logo"
                                android:layout_marginTop="10dp"
                                android:text="@string/community_text"/>
                            <Button
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#4FA40F"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:text="@string/join"
                                android:id="@+id/joinCommunity"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:id="@+id/support"
                        android:layout_margin="5dp"
                        app:cardElevation="10dp"
                        android:backgroundTint="#ffffff"
                        app:cardCornerRadius="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00FFFFFF"
                            android:padding="20dp">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/handshake_24"
                                android:id="@+id/support_logo"
                                android:contentDescription="@string/app_name" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="@string/support"
                                android:textColor="#8BC34A"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                            <TextView
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/support_logo"
                                android:layout_marginTop="10dp"
                                android:text="@string/support_text"/>
                            <Button
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#4FA40F"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:text="@string/join"
                                android:id="@+id/joinDonation"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="200dp"
                        app:cardElevation="10dp"
                        android:backgroundTint="#ffffff"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00FFFFFF"
                            android:padding="20dp">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/location_on_24"
                                android:id="@+id/carbon_logo"
                                android:contentDescription="@string/app_name" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="@string/carbon"
                                android:textColor="#8BC34A"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                tools:ignore="RelativeOverlap" />
                            <TextView
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/carbon_logo"
                                android:layout_marginTop="10dp"
                                android:text="@string/carbon_text"/>
                            <Button
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#4FA40F"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:text="@string/join"
                                android:id="@+id/joinCarbon"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>